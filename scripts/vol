#!/bin/sh

#
# vol - pamixer colume
#       usage: vol, vol [5-100]
#

command -v pamixer >/dev/null || {
    printf 'err: %s\n' "command 'pamixer' not found."
    exit 1
}

if [ -z "$1" ]; then
  pamixer --get-volume-human
elif [ "$1" -gt 100 ]; then
  pamixer --set-volume 100
elif [ "$1" -lt 5 ]; then
  pamixer --set-volume 5
else
  pamixer --set-volume "$1"
fi
