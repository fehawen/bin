#!/bin/sh

xinitrc() {
    export DISPLAY=:0

    [ -f ~/.Xresources ] && xrdb -merge ~/.Xresources &

    cpr light

    setxkbmap -layout se &

    exec sowm
}

trap xinitrc USR1

(
    trap '' USR1

    exec X -ardelay 300 \
        -arinterval 30 \
        -nolisten tcp \
        -keeptty \
        :0 vt1 -quiet
) &

wait
